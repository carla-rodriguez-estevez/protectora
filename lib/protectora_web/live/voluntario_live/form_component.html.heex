<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="voluntario-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :nome %>
    <%= text_input f, :nome %>
    <%= error_tag f, :nome %>
  
    <%= label f, :contrasinal %>
    <%= text_input f, :contrasinal %>
    <%= error_tag f, :contrasinal %>
  
    <%= label f, :email %>
    <%= text_input f, :email %>
    <%= error_tag f, :email %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
