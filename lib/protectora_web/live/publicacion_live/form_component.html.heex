<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="publicacion-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :titulo %>
    <%= text_input f, :titulo %>
    <%= error_tag f, :titulo %>
  
    <%= label f, :contido %>
    <%= text_input f, :contido %>
    <%= error_tag f, :contido %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
